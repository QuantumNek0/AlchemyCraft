	"potion component": {
		"scope": "javascript",
		"prefix": "p_script_component",
		"body": [
			"const AlchemyPotion${2:potion_component} = {",
			"\tonConsume(event){",
			"\t\tconst unique_effect = ${3|false,true|};",
			"\t\tlet effectDuration = effectDuration_base;",
			"\t\tlet amplifier = amplifier_base;",
			"",
			"\t\tif(event.itemStack.typeId === \"alchemycraft:potion_${1:potion_name}_long\"){",
			"\t\t\teffectDuration = effectDuration_long;",
			"\t\t\tamplifier = amplifier_long;",
			"",
			"\t\t} else if(event.itemStack.typeId === \"alchemycraft:potion_${1:potion_name}_strong\"){",
			"\t\t\teffectDuration = effectDuration_strong;",
			"\t\t\tamplifier = amplifier_strong;",
			"\t\t}",
			"\t\tif (unique_effect) {",
			"\t\t\tfor (let effect in unique_effects){",
			"",
			"\t\t\t\tif (event.source.getEffect(unique_effects[effect])){",
			"\t\t\t\t\tevent.source.removeEffect(unique_effects[effect]);",
			"\t\t\t\t}",
			"\t\t\t}",
			"\t\t}",
			"\t\tif (event.source.getEffect(\"${1:potion_name}\")) {",
			"\t\t\tevent.source.removeEffect(\"${1:potion_name}\");",
        	"\t\t}",
			"\t\tevent.source.addEffect(\"${1:potion_name}\", effectDuration, {",
			"\t\t\tamplifier: amplifier,",
			"\t\t\tshowParticles: true",
			"\t\t});",
			"\t}",
			"};",
			"",
			"world.beforeEvents.worldInitialize.subscribe(({ itemComponentRegistry }) => {",
			"\titemComponentRegistry.registerCustomComponent(",
			"\t\t\"alchemycraft:potion_${1:potion_name}\", AlchemyPotion${2:potion_component}",
			"\t);",
			"});"
		],
		"description": "Creates a script component for potion"
	},

