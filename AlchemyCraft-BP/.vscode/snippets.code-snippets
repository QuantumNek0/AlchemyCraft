	// Place your AlchemyCraft-BP workspace snippets here. Each snippet is defined under a snippet potion_name and has a scope, prefix, body and 
	// description. Add comma separated ids of the languages where the snippet is applicable in the scope field. If scope 
	// is left empty or omitted, the snippet gets applied to all languages. The prefix is what is 
	// used to trigger the snippet and the body will be expanded and inserted. Possible variables are: 
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. 
	// Placeholders with the same ids are connected.
	// Example:
	"item seed": {
		"scope": "json",
		"prefix": "s_item_seed",
		"body": [
			"{",
			"\t\"format_version\": \"1.21.10\",",
			"\t\"minecraft:item\": {",
			"\t\t\"description\": {",
			"\t\t\t\"identifier\": \"alchemycraft:seed_${1:potion_name}\",",
			"\t\t\t\"menu_category\": {",
			"\t\t\t\t\"category\": \"nature\",",
			"\t\t\t\t\"group\": \"itemGroup.name.seed\"",
			"\t\t\t}",
			"\t\t},",
			"\t\t\"components\": {",
			"\t\t\t\"minecraft:icon\": \"texture_seed_${1:potion_name}\",",
			"\t\t\t\"minecraft:block_placer\": {",
			"\t\t\t\t\"block\": \"alchemycraft:flower_${1:potion_name}\"",
			"\t\t\t}",
			"\t\t}",
			"\t}",
			"}"
		],
		"description": "Creates seed item"
	},

